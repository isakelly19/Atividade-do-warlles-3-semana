  inteiro: opcao;
  real: a,b;

   escreval("1. Soma");
   escreval("2. Subtração");
   escreval("3. Multiplicação");
   escreval("4. Divisão");
   escreva("Escolha uma opção: ");
   leia(opcao);

   escreva("Digite o primeiro valor: ");
   leia(a);
   escreva("Digite o segundo valor: ");
   leia(b);

   se opcao = 1 entao
      escreval("Resultado: ", a + b)
   senao
      se opcao = 2 entao
         escreval("Resultado: ", a - b)
      senao
         se opcao = 3 entao
            escreval("Resultado: ", a * b)
         senao
            se opcao = 4 entao
               escreval("Resultado: ", a / b)
            senao
               escreval("Opção inválida")
