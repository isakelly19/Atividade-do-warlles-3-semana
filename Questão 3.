#include <stdio.h>

int main() {
    short idade;
    int deposito;
    long conta;

    printf("Digite sua idade: ");
    scanf("%hd", &idade);
    printf("Digite o valor a depositar: ");
    scanf("%d", &deposito);
    printf("Digite o numero da conta: ");
    scanf("%ld", &conta);

    printf("Idade: %hd\n", idade);
    printf("Deposito: %d\n", deposito);
    printf("Conta: %ld\n", conta);

    return 0;
}
